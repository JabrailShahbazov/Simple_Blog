@model IndexViewModel


<div class="pages">
    @if (Model.PageNumber > 1)
    {
        <a asp-action="Index" asp-controller="Home" asp-route-pageNumber="@(Model.PageNumber - 1)"
           asp-route-search="@Model.Search" asp-route-category="@Model.Category">&lt;</a>
    }

    @foreach (var p in Model.Pages)
    {
        if (p == -1)
        {
            <span class="three-dots">...</span>
        }
        else
        {

            <a class="@( p == Model.PageNumber ? "aktive" : "")" asp-action="Index" asp-controller="Home" asp-route-pageNumber="@p"
               asp-route-search="@Model.Search" asp-route-category="@Model.Category"> @p </a>
        }
    }

    @if (Model.NextPage)
    {
        <a asp-action="Index" asp-controller="Home" asp-route-pageNumber="@(Model.PageNumber + 1)"
           asp-route-search="@Model.Search" asp-route-category="@Model.Category">&gt;</a>
    }
</div>